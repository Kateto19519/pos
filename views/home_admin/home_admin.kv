#: import Users views.users.Users
#: import Dashboard views.dashboard.Dashboard
#: import Stocks views.stocks.Stocks
<HomeAdmin>:
    spacing:dp(12)
    padding:[dp(32), dp(16)]
    MDBoxLayout:
        orientation:'vertical'
        spacing:dp(12)
        size_hint_x: .20
        md_bg_color:hex('#0c22c9')
        BoxLayout:
            size_hint_y:None
            height:self.width
            padding:dp(12)
            Image:
                source:'assets/imgs/logo-dark.png'
        GridLayout:
            cols:1
            spacing:dp(12)
            NavToggle:
                text:"Dashboard"
                icon: "monitor-dashboard"
                on_release:scrn_mngr.current= "scrn_dashboard"
            NavToggle:
                text:"Manage stock"
                icon: 'food'
                on_release:scrn_mngr.current= "scrn_stocks"
            NavToggle:
                text:"Manage staff"
                icon: 'account'
                on_release:scrn_mngr.current= "scrn_users"

    BoxLayout:
        size_hint_x: .9
        orientation:'vertical'
        spacing:dp(12)
        BoxLayout:
            size_hint_y:None
            height:dp(54)
        ScreenManager:
            id:scrn_mngr
            Screen:
                name:"scrn_dashboard"
                Dashboard:
                    id:dashboard

            Screen:
                name:"scrn_stocks"
                Stocks:
                    id:stocks

            Screen:
                name:"scrn_users"
                Users:
                    id:users

<NavToggle@ToggleButtonBehavior+BoxLayout>:
    size_hint_y:None
    height:dp(48)
    text:""
    icon: ""
    group:"nav-items" # cant select more than one item
    spacing:dp(12)
    AnchorLayout:
        anchor_y:"center"
        size_hint_x:None
        width:dp(6)
        Widget:
            size_hint_y: .6
            canvas.before:
                Color:
                    rgba:[1,1,1,1] if root.state == "down" else [0,0,0,0]
                RoundedRectangle:
                    pos:self.pos
                    size:self.size
                    radius:[0, dp(6), dp(6),0]

    IconLeftWidget:
        icon:root.icon

    Text:
        text:root.text
        color:[1,1,1,1]
        font_size:app.fonts.size.h3






