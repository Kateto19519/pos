<Auth>:
   BoxLayout:
      orientation:'vertical'
      spacing: dp(24)
      padding: dp(25)
      canvas.before:
         Color:
            rgba:[1,1,1,1]
         Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/imgs/bg-login.png"
      AnchorLayout:
         anchor_y: 'bottom'
         Image:
            source:"assets/imgs/logo-light.png"
      BoxLayout:
         orientation:'vertical'
         spacing: dp(24)
         Text:
            text: "POS system"
            font_name: app.fonts.heading
            font_size: app.fonts.size.extra
            color: app.color_primary_text
            halign: "center"
            valign:"bottom"
#            size_hint_y: None
#            height: dp(54)
         AnchorLayout:
            anchor_y: "top"
            Label:
               text: "An all in one, simple yet feature reach solution for business"
               text_size: [self.parent.width, None]
               font_size:app.fonts.size.h3
               font_name: app.fonts.subheading
               size: self.texture_size
               color: app.color_primary_text
               halign: "center"
               valign:  "top"
               size_hint_y: None
   BoxLayout:
      orientation:'vertical'
      spacing: dp(12)
      BoxLayout:
         orientation:'vertical'
         spacing: dp(12)
         size_hint_y: .3
         Text:
            text: "Katy's restaurant"
            font_name: app.fonts.styled
            font_size:app.fonts.size.extra
            color:app.color_primary_text
            halign:"center"
            valign: "bottom"
         AnchorLayout:
            anchor_y:"top"
            Label:
               text: "Enter your details to access the program."
               text_size: [self.parent.width, None]
               font_name: app.fonts.body
               font_size:app.fonts.size.h3
               size: self.texture_size
               color: app.color_secondary_text
               halign: "center"
               valign:  "top"
               size_hint_y:None
         Widget:
      AnchorLayout:
         size_hint_y: .5
         BoxLayout:
            orientation:'vertical'
            spacing: dp(24)
            padding: dp(24)
            size_hint_x: .7
#            BackBox:
#               size_hint_y: None
#               height: dp(50)
#               bcolor: app.color_secondary_bg
#               radius: [self.height* 0.1]
#               padding: [dp(12), dp(2)]
#               FlatField:
#                  id:username_field
#                  left_icon: "account"
#                  hint_text: "username"
#                  hint_text_color: app.color_primary_text
#                  font_size: app.fonts.size.h3
#                  multiline:False
            BackBox:
               size_hint_y: None
               height: dp(50)
               bcolor: app.color_secondary_bg
               radius: [self.height* 0.1]
               padding: [dp(12), dp(2)]
               FlatField:
                  id:password_field
                  hint_text: "password"
                  hint_text_color: app.color_primary_text
                  font_size: app.fonts.size.h3
                  password:True
                  multiline:False
                  left_icon: 'lock'
            BackBox:
               size_hint_y:None
               height: dp(64)
               RoundedButton:
                  text: "Sign in"
                  font_name: app.fonts.heading
                  font_size: app.fonts.size.h1
                  bcolor: app.color_primary
                  radius: [self.height*.1]
                  on_release: root.authenticate()
            Widget:

      AnchorLayout:
         size_hint_y:.2
         padding: dp(24)
         Text:
            text: "v0.01"
            font_size: app.fonts.size.h3
            valign: "bottom"
            halign: "center"
            color: app.color_primary_text