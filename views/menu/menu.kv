<Menu>:
    MDScreenManager:
        id: menu_screen
        MDScreen:
            MDBoxLayout:#the main one
                md_bg_color: hex('#58edc8')
                MDBoxLayout: # for the buttons and label
                    orientation: 'vertical'
                    pos_hint: {'top': 1}
                    adaptive_height: True

                    padding:[0, 10,0,0]
                    spacing: '30dp'
    #                MDBoxLayout: #for the menu items and buttons
    #                    orientation:'vertical'
                    MDLabel:
                        halign:'center'
                        text: "Menu Items"
                        font_name: app.fonts.styled
                        font_size: app.fonts.size.h1
                        color:app.color_primary_text

                    MDBoxLayout:
                        orientation:'horizontal'
                        size_hint_x:None
                        width:root.width * 0.7
                        size_hint_y:None
                        height:dp(50)
                        pos_hint:{'top': 1}
                        spacing:'30dp'
                        padding:'12dp'
                        CategoryButton:
                            text:"All"
                            on_press:menu_table.load_menu_items()


                        CategoryButton:
                            id:1
                            text: "Soups"
                            on_press: menu_table.load_type_of_meal(1)
                        CategoryButton:
                            id:2
                            text: "Salads"
                            on_press: menu_table.load_type_of_meal(2)
                        CategoryButton:
                            id:3
                            text: "Appetizers"
                            on_press: menu_table.load_type_of_meal(3)
                        CategoryButton:
                            id:4
                            text: "Main Dishes"
                            on_press: menu_table.load_type_of_meal(4)
                        CategoryButton:
                            id:5
                            text: "Desserts"
                            on_press: menu_table.load_type_of_meal(5)
                        CategoryButton:
                            id:6
                            text: "Drinks"
                            on_press: menu_table.load_type_of_meal(6)
                    MDBoxLayout:
                        id:my_box
                        adaptive_width:True
                        adaptive_height:True
                        orientation:'horizontal'
                        md_bg_color: hex('#52c229')
                        width: root.width
                        height: root.height

                        MenuTable:
                            id:menu_table
                            size_hint_x:0.65

                        BillHolder:
                            size_hint_x:0.35
#                            md_bg_color: hex('#ffffff')


















