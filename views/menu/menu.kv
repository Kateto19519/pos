#:import hex kivy.utils.get_color_from_hex

<CategoryButton@MDRoundFlatButton>:
    text_color: "black"
    padding:'12dp'
    spacing:'12dp'
    line_color: "black"

<Menu>:
    MDScreenManager:
        id: menu_screen
        MDScreen:
            id: md_screen
            MDBoxLayout: #the main one
                id:main_box
                orientation:'vertical'
                md_bg_color: hex('#58edc8')
                MDBoxLayout: # for the buttons and label, it doesnt appear
#                    adaptive_width:True
#                    adaptive_height:True
                    orientation:'vertical'
                    width:root.width
                    size_hint_y:0.20
                    pos_hint: {'top': 1}
                    padding:[0,10,0,0]
                    MDLabel:
                        halign:'center'
                        text: "Menu Items"
                        font_name: app.fonts.styled
                        font_size: app.fonts.size.h1
                        color:app.color_primary_text
                    MDBoxLayout:
                        orientation:'horizontal'
#                        size_hint_x:None
                        width:root.width * 0.7
                        size_hint_x:0.15
                        spacing: '12dp'
                        padding:'12dp'
                        pos_hint: {'center_x': 0.25}
                        CategoryButton:
                            text:"All"
                            on_press:menu_table.load_menu_items()
                        CategoryButton:
                            id:1
                            text: "Soups"
                            on_press: menu_table.load_type_of_meal(1)
                        CategoryButton:
                            id:2
                            text: "Salads"
                            on_press: menu_table.load_type_of_meal(2)
                        CategoryButton:
                            id:3
                            text: "Appetizers"
                            on_press: menu_table.load_type_of_meal(3)
                        CategoryButton:
                            id:4
                            text: "Main Dishes"
                            on_press: menu_table.load_type_of_meal(4)
                        CategoryButton:
                            id:5
                            text: "Desserts"
                            on_press: menu_table.load_type_of_meal(5)
                        CategoryButton:
                            id:6
                            text: "Drinks"
                            on_press: menu_table.load_type_of_meal(6)
                BillParent:
                    bill_holder_inst: bill_holder
                    id:my_box
                    adaptive_width:True
                    adaptive_height:True
                    orientation:'horizontal'
                    width: root.width
                    height:root.height
                    size_hint_y:0.75
                    MenuTable:
                        id: menu_table
                        size_hint_x: 0.65
                        height: my_box.height
                    BillHolder:
                        id: bill_holder
                        size_hint_x:0.35




