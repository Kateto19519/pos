#:import hex kivy.utils.get_color_from_hex
<MenuItem@MDSmartTile>:
    radius: 24
    box_radius: [0, 0, 24, 24]
    box_color: 1, 1, 1, .7
    size_hint: None, None
    size: "150dp", "150dp"
    lines:2 #this specifies how many lines of text the box will hold

<MenuItemInfo@TwoLineListItem>
<CategoryButton@MDRoundFlatButton>:
    text_color: "black"
    padding:'12dp'

<MenuTable@MDGridLayout>:
    rows: 12
    cols: 2
    md_bg_color:hex('#cbe6c1')








<ReceiptPlaceholder@MDBoxLayout>:
    pos_hint: {'right': 1, 'top': 1}
    adaptive_width: True
    adaptive_height: True
    md_bg_color: app.theme_cls.primary_color
    MDLabel:
        text: "Table #"


<Menu>:
    MDScreenManager:
        id: menu_screen
        MDScreen:
            MDBoxLayout:#the main one
                md_bg_color: hex('#58edc8')
                MDBoxLayout: # for the buttons and label
                    orientation: 'vertical'
                    pos_hint: {'top': 1}
                    adaptive_height: True

                    padding:[0, 10,0,0]
                    spacing: '30dp'
    #                MDBoxLayout: #for the menu items and buttons
    #                    orientation:'vertical'
                    MDLabel:
                        halign:'center'
                        text: "Menu Items"
                        font_name: app.fonts.styled
                        font_size: app.fonts.size.h1
                        color:app.color_primary_text

                    MDBoxLayout:
                        orientation:'horizontal'
                        size_hint_x:None
                        width:root.width * 0.7
                        size_hint_y:None
                        height:dp(50)
                        pos_hint:{'top': 1}
                        spacing:'30dp'
                        padding:'12dp'
                        CategoryButton:
                            text: "Soups"
                        CategoryButton:
                            text: "Salads"
                        CategoryButton:
                            text: "Appetizers"
                        CategoryButton:
                            text: "Main Dishes"
                        CategoryButton:
                            text: "Desserts"
                        CategoryButton:
                            text: "Drinks"
                    MDBoxLayout:
                        adaptive_width:True
                        adaptive_height:True
                        orientation:'horizontal'
                        md_bg_color: hex('#52c229')
                        width: root.width
                        height: root.height

                        MenuTable:
                            size_hint_x:0.65
                        MDBoxLayout:
                            size_hint_x:0.35
                            md_bg_color: hex('#52c229')















