<Users>:
    id: "scrn_users"
    orientation: 'vertical'
    padding: dp(12)
    MDBoxLayout:
        size_hint_y: None
        height: dp(54)
        MDBoxLayout:
        MDBoxLayout:
            padding: [dp(12), 0]
            size_hint_x: .1
            bcolor: app.color_primary
            RelativeLayout:
                AnchorLayout:
                    anchor_x: 'right'
                    MDRoundFlatIconButton:
                        text: "Add New"
                        icon: 'plus'
                        icon_color: "white"
                        text_color: "white"
                        width: self.height
                        line_color: app.color_primary
                        md_bg_color: app.color_primary
                        on_release: root.add_new()
    MDBoxLayout:
        id: bx_table
        orientation: 'vertical'
        padding: [0, dp(16), 0, 0]
        MDBoxLayout:
            size_hint_y: None
            height: dp(42)
            spacing: dp(12)
            padding: [dp(12), 0]
            md_bg_color: hex('#898f8b')
            Text:
                text: "Name"
                color: app.color_primary_text
                font_size: app.fonts.size.h3
                size_hint_x: .15

            Text:
                text: "Password([size=14]encrypted[/size])"
                color: app.color_primary_text
                font_size: app.fonts.size.h3
                size_hint_x: .15


            Text:
                text: "Staff type"
                color: app.color_primary_text
                font_size: app.fonts.size.h3
                size_hint_x: .15

            Text:
                text: "Salary"
                color: app.color_primary_text
                font_size: app.fonts.size.h3
                size_hint_x: .15

            Text:
                text: "Account created"
                color: app.color_primary_text
                font_size: app.fonts.size.h3
                size_hint_x: .15
            MDBoxLayout:
                size_hint_x:None
                width:self.height

        MDBoxLayout:
            ScrollView:
                do_scroll: [False, True]
                size_hint_y: None
                height: self.parent.height
                GridLayout:
                    id: gl_users
                    cols: 1
                    spacing: dp(8)
                    size_hint_y: None
                    height: self.minimum_height

<UserTile>:
    size_hint_y: None
    height: dp(42)
    spacing: dp(12)
    padding: [dp(12), 0]
    canvas.before:
        Color:
            rgb: app.color_secondary_bg
        Rectangle:
            pos: self.pos
            size: [self.size[0], dp(2)]

    Text:
        text: root.username
        color: app.color_primary_text
        font_size: app.fonts.size.h3
        size_hint_x: .15
        font_name: app.fonts.body

    Text:
        text: root.password
        color: app.color_primary_text
        font_size: app.fonts.size.h3
        size_hint_x: .15
        font_name: app.fonts.body


    Text:
        text: root.staff_type
        color: app.color_primary_text
        font_size: app.fonts.size.h3
        size_hint_x: .15
        font_name: app.fonts.body

    Text:
        text: root.salary
        color: app.color_primary_text
        font_size: app.fonts.size.h3
        size_hint_x: .15
        font_name: app.fonts.body

    Text:
        text: root.account_created
        color: app.color_primary_text
        font_size: app.fonts.size.h3
        size_hint_x: .15
        font_name: app.fonts.body

    MDIconButton:
        icon:'delete'
        size_hint_x:None
        width:self.height
        on_release:root.delete_user()

<ModifyUser>:
    background: ""
    background_color: [0, 0, 0, 0.1]
    AnchorLayout:
        anchor_x: "right"
        BackBox:
            orientation: 'vertical'
            spacing: dp(12)
            bcolor: app.color_primary_bg
            size_hint_x: .3
            AnchorLayout:
                anchor_x: 'left'
                size_hint_y: None
                height: dp(42)
                MDIconButton:
                    icon: 'window-close'
                    text_color: 0, 0, 0, 1
                    on_release: root.dismiss()

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: .2
                Text:
                    id:title
                    text: "Add staff member"
                    font_name: app.fonts.styled
                    font_size: app.fonts.size.extra
                    color: app.color_primary_text
                    halign: "center"
                    valign: "bottom"

                AnchorLayout:
                    anchor_y: "top"
                    Label:
                        id: subtitle
                        text: "Enter the details below to sign up a staff member."
                        text_size: [self.parent.width, None]
                        font_name: app.fonts.body
                        font_size: app.fonts.size.h3
                        size: self.texture_size
                        color: app.color_secondary_text
                        halign: "center"
                        valign: "top"
                        size_hint_y: None

                Widget:

            AnchorLayout:
                size_hint_y: .8
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(24)
                    padding: dp(12)
                    BackBox:
                        size_hint_y: None
                        height: dp(50)
                        bcolor: app.color_secondary_bg
                        radius: [self.height * 0.1]
                        padding: [dp(12), dp(2)]
                        FlatField:
                            id: username_field
                            hint_text: "username"
                            hint_text_color: app.color_primary_text
                            font_size: app.fonts.size.h3
                            multiline: False

                    BackBox:
                        size_hint_y: None
                        height: dp(50)
                        bcolor: app.color_secondary_bg
                        radius: [self.height * 0.1]
                        padding: [dp(12), dp(2)]
                        FlatField:
                            id: passcode_field
                            hint_text: "passcode"
                            hint_text_color: app.color_primary_text
                            font_size: app.fonts.size.h3
                            multiline: False
                            left_icon: 'lock'
                            password:True

                    BackBox:
                        size_hint_y: None
                        height: dp(50)
                        bcolor: app.color_secondary_bg
                        radius: [self.height * 0.1]
                        padding: [dp(12), dp(2)]
                        FlatField:
                            id: passcode_confirm_field
                            hint_text: "confirm passcode"
                            hint_text_color: app.color_primary_text
                            font_size: app.fonts.size.h3
                            multiline: False
                            password:True

                    BackBox:
                        size_hint_y: None
                        height: dp(50)
                        bcolor: app.color_secondary_bg
                        radius: [self.height * 0.1]
                        padding: [dp(12), dp(2)]
                        Spinner:
                            id: staff_type
                            background_normal: ''
                            background_color: app.color_secondary_bg
                            text: "Staff type"
                            color: "black"
                            font_size: app.fonts.size.h3
                            values: ["Admin", "Waiter"]
                            on_text: root.spinner_clicked(staff_type.text)

                    BackBox:
                        size_hint_y: None
                        height: dp(50)
                        bcolor: app.color_secondary_bg
                        radius: [self.height * 0.1]
                        padding: [dp(12), dp(2)]
                        FlatField:
                            id: salary_field
                            hint_text: "salary"
                            hint_text_color: app.color_primary_text
                            font_size: app.fonts.size.h3
                            multiline: False

                    BackBox:
                        id:btn_confirm
                        size_hint_y: None
                        height: dp(64)
                        RoundedButton:
                            id:btn_confirm
                            text: "Add"
                            font_name: app.fonts.heading
                            font_size: app.fonts.size.h1
                            bcolor: app.color_primary
                            radius: [self.height * .1]
                            on_release:
                                root.add_user()
                                root.dismiss()

                    Widget:
<DeleteConfirm>:
    background:""
    background_color:[0,0,0,.1]
    BackBox:
        orientation:'vertical'
        spacing:dp(12)
        padding:dp(14)
        bcolor:app.color_primary_bg
        radius:[self.height *.08]
        size_hint:[None, 0.7]
        width:self.height
        BoxLayout:
            size_hint_y:.6
            orientation:'vertical'
            Text:
                text:'Delete user'
                font_name:app.fonts.styled
                font_size:app.fonts.size.extra
                color:app.color_primary_text
                halign:'center'
            Text:
                text:"Are you sure tou want to delete this user"
                halign:"center"
                font_size:app.fonts.size.h2
                color:app.color_primary_text
        AnchorLayout:
            BoxLayout:
                size_hint_y:.4
                spacing:dp(12)
                size_hint_y:None
                height:dp(64)
                FlatButton:
                    text:"Cancel"
                    font_size:app.fonts.size.h2
                    color:app.color_primary
                    on_release:root.dismiss()
                RoundedButton:
                    text: "Yes, Delete"
                    font_size:app.fonts.size.h2
                    bcolor:app.color_tertiary
                    color:rgba("#ffffff")
                    radius:[self.height * .1]
                    on_release:


