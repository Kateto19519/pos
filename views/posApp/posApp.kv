#:import Window kivy.core.window.Window
#:include tables.kv


<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True




<ContentNavigationDrawer>

    MDList:

        OneLineListItem:
            text: "Tables"
            id: Lock1
            icon:'lock-open'
            pos_hint:{"center_x": .1, "center_y": .76}
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "tables"


        OneLineListItem:
            text: "Dashboard"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "scr 2"


<PosApp>:

    MDScreen:

        MDTopAppBar:
            pos_hint: {"top": 1}
            elevation: 4
            title: "Menu"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDNavigationLayout:

            MDScreenManager:
                id: screen_manager

                MDScreen:
                    name: "tables"


                    GridLayout:
                        rows: 8 if Window.width < 500 else 4
                        cols: 2 if Window.width <500 else 4
#                        rows:4
#                        cols:4
                        spacing:'70dp'
                        padding:'70dp'

                        Tables:

                MDScreen:
                    name: "scr 2"

                    MDLabel:
                        text: "Screen 2"
                        halign: "center"

            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 16, 16, 0)

                ContentNavigationDrawer:
                    screen_manager: screen_manager
                    nav_drawer: nav_drawer

