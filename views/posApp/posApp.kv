#:import Window kivy.core.window.Window

<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True


<TableUILight@BoxLayout>
    padding:'30dp'
    spacing:'20dp'
    orientation:'vertical'
    canvas.before:
        Color:
            rgb: rgba(144, 245, 208, 0.2)
        RoundedRectangle:
            pos:self.pos
            size:self.size

<TableUIDark@BoxLayout>
    padding:'30dp'
    spacing:'20dp'
    orientation:'vertical'
    canvas.before:
        Color:
            rgb: rgba(128, 172, 237, 0.1)
        RoundedRectangle:
            pos:self.pos
            size:self.size

<ButtonTableLight@MDRectangleFlatIconButton>

    icon: "table-chair"
    text_color: "black"
    line_color:rgba(78, 47, 227, 0.2)
    theme_icon_color: "Custom"
    icon_color: "orange"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}

<ButtonTableDark@MDRectangleFlatIconButton>
    icon: "table-chair"
    text_color: "black"
    line_color:rgba(29, 14, 102,0.2)
    theme_icon_color: "Custom"
    icon_color: "orange"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}



<ContentNavigationDrawer>

    MDList:

        OneLineListItem:
            text: "Tables"
            id: Lock1
            icon:'lock-open'
            pos_hint:{"center_x": .1, "center_y": .76}
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "tables"


        OneLineListItem:
            text: "Dashboard"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "scr 2"


<PosApp>:

    MDScreen:

        MDTopAppBar:
            pos_hint: {"top": 1}
            elevation: 4
            title: "Menu"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDNavigationLayout:

            MDScreenManager:
                id: screen_manager

                MDScreen:
                    name: "tables"


                    GridLayout:
                        cols:4
                        rows:4
                        spacing:'70dp'
                        padding:'70dp'

                        TableUIDark:
                            ButtonTableDark:
                                text:"TABLE1"

                        TableUILight:
                            ButtonTableLight:
                                text:"TABLE2"

                        TableUIDark:
                            ButtonTableDark:
                                text:"TABLE3"

                        TableUILight:
                            ButtonTableLight:
                                text:"TABLE4"

                        TableUIDark:
                            ButtonTableDark:
                                text:"TABLE5"

                        TableUILight:
                            ButtonTableLight:
                                text:"TABLE6"

                        TableUIDark:
                            ButtonTableDark:
                                text:"TABLE7"

                        TableUILight:
                            ButtonTableLight:
                                text:"TABLE8"

                        TableUILight:
                            padding:'30dp'
                            spacing:'20dp'
                            orientation:'vertical'
                            canvas.before:
                                Color:
                                    rgb: rgba(255,255,255, 0.1)
                                RoundedRectangle:
                                    pos:self.pos
                                    size:self.size

                        TableUIDark:
                            ButtonTableDark:
                                text:"TABLE9"

                        TableUILight:
                            ButtonTableLight:
                                text:"TABLE10"






                MDScreen:
                    name: "scr 2"

                    MDLabel:
                        text: "Screen 2"
                        halign: "center"

            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 16, 16, 0)

                ContentNavigationDrawer:
                    screen_manager: screen_manager
                    nav_drawer: nav_drawer

