# views/posApp/posApp.kv

<PosApp>:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.35
        canvas.before:
            Color:
                rgba: app.color_secondary
            Rectangle:
                pos: self.pos
                size: self.size

        MDNavigationDrawer:
            NavigationDrawerIconButton:
                icon: 'menu'
                on_release: app.root.toggle_nav_drawer()
            NavigationDrawerIconButton:
                icon: 'account'
                text: 'Account'
                on_release: app.root.ids.nav_drawer.set_state("close")
            NavigationDrawerIconButton:
                icon: 'settings'
                text: 'Settings'
                on_release: app.root.ids.nav_drawer.set_state("close")

    BoxLayout:
        orientation: 'horizontal'










